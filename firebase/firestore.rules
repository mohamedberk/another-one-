rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public access to create bookings (temporary for development)
    match /bookings/{bookingId} {
      // Allow anyone to create bookings for now
      allow create: if true;
      
      // Allow public read access for development
      allow read: if true;
      
      // Restrict updates and deletes to authenticated users in the future
      allow update, delete: if false;
    }
  }
} 